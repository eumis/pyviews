// Place your settings in this file to overwrite default and user settings.
{
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--follow-imports=silent"        
    ],
    "python.linting.pylintArgs": [
        "--disable=C0111"   
    ],
    "files.exclude":
    {
        "**/.git": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.sublime-project": true,
        "pyviews.egg-info": true,
        "**/*.py~": true,
        "**/*.un~": true,
        "Include": true,
        "Lib": true,
        "Scripts": true,
        "pip-selfcheck.json": true
    },
    "python.pythonPath": "C:/Program Files (x86)/Python36-32/python.exe"
}