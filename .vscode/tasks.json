{
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceRoot}"
	},
	"tasks": [
		{
			"label": "developer pip install",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"windows" : {
				"command": "pip",
				"args": ["install", "-e", "${workspaceRoot}", "--upgrade"]
			},
			"linux" : {
				"command": "pip3",
				"args": ["install", "-e", "${workspaceRoot}", "--upgrade"]
			}
		},
		{
			"label": "Run package linting",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"windows": {
				"command": "pylint",
				"args": ["${workspaceRoot}\\pyviews"]
			},
			"linux": {
				"command": "pylint3",
				"args": ["${workspaceRoot}//pyviews"]
			}
		},
		{
			"label": "prepare wheel",
			"command": "python",
			"args": [
				"setup.py",
				"sdist",
				"bdist_wheel"
			]
		}
	]
}