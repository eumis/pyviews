<?xml version="1.0"?>
<core:Container xmlns:tk="tkinter"
                xmlns:core="pyviews.view.core"
                xmlns:cs="pyviews.view.containers"
                import:Counter="sandbox.counter.Counter"
                import:IntBinding="pyviews.viewmodel.binding.IntBinding"
                view_model="{Counter()}">
    <tk:Button grid_row="0"
               grid_column="0"
               bind-Button-1="{up_count}">
        + 1
    </tk:Button>

    <tk:Entry grid_row="0"
              grid_column="1"
              textvariable="{IntBinding(self, 'count', 0).get_var()}">
    </tk:Entry>

    <tk:Label grid_row="0"
              grid_column="2">
        {count}
    </tk:Label>

    <cs:For items='{range(count)}'>
        <tk:Label grid_row="{item+1}"
                  grid_column="0">
            {item}
        </tk:Label>
    </cs:For>
</core:Container>