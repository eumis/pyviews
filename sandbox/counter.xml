<?xml version="1.0"?>
<core:Container xmlns:tk="tkinter"
                xmlns:core="pyviews.view.core"
                xmlns:cs="pyviews.view.containers"
                xmlns:import="pyviews.modifiers.core.import_global"
                xmlns:bind="pyviews.modifiers.core.bind"
                xmlns:grid="pyviews.modifiers.widget.grid"
                xmlns:pack="pyviews.modifiers.widget.pack"
                xmlns:config="pyviews.modifiers.widget.config"

                import:Counter="sandbox.counter.Counter"
                import:create_int_var="pyviews.binding.vars.create_int_var"
                import:get_color="sandbox.commands.get_color"

                view_model="{Counter()}">
    <tk:Button grid:row="0"
               grid:column="0"
               bind:Button-1="{up_count}">
        + 1
    </tk:Button>

    <tk:Entry grid:row="0"
              grid:column="1"
              config:textvariable="{create_int_var(self, 'count', 0)}">
    </tk:Entry>

    <tk:Label grid:row="0"
              grid:column="2">
        {count}
    </tk:Label>

    <tk:Frame grid:row="1"
              grid:column="0"
              grid:columnspan="3">
        <cs:For items='{range(count)}'>
            <tk:Label pack:fill="both"
                      pack:expand="True"
                      config:background="{get_color(index)}">
                {str(item+1) + ' ' + str(index)}
            </tk:Label>
        </cs:For>
    </tk:Frame>
</core:Container>