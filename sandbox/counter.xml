<?xml version="1.0"?>
<t:View xmlns:tk="tkinter"
        xmlns:t="view.tree"
        xmlns:c="view.controls"
        import="sandbox.counter.Counter:Counter,viewmodel.variables.IntBinding:IntBinding"
        view_model="{Counter()}">
    <tk:Button grid_row="0"
               grid_column="0"
               bind-Button-1="{up_count}">
        + 1
    </tk:Button>

    <tk:Entry grid_row="0"
              grid_column="1"
              textvariable="{IntBinding(self, 'count', 0).get_var()}">
    </tk:Entry>

    <tk:Label grid_row="0"
              grid_column="2">
        {count}
    </tk:Label>

    <c:for item='item' collection='{count}'>
        <tk:Label grid_row="{item+1}"
                  grid_column="0">
            {item}
        </tk:Label>
    </c:for>
</t:View>