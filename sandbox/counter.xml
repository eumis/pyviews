<?xml version="1.0"?>
<t:View xmlns:tk="tkinter"
        xmlns:t="view.tree"
        view-model='{sandbox.counter.Counter}'>
    <tk:Button grid_row="0"
               grid_column="0"
               bind-Button-1="{up_count()}">
        + 1
    </tk:Button>

    <tk:Entry grid_row="0"
              grid_column="1"
              textvariable='{{tkinter.IntVar:count}}'>
    </tk:Entry>

    <tk:Label grid_row="0"
              grid_column="2">
        {count}
    </tk:Label>

    <!--<d:for item='item' collection='{count}'>
        <tk:Label grid="row=item+1, column=0">
            {item}
        </tk:Label>
    </d:for>-->
</t:View>