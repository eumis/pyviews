<?xml version="1.0"?>
<w:Container xmlns="tkinter"
                xmlns:w="pyviews.tk.widgets"
                xmlns:import="pyviews.core.modifiers.import_global"
                xmlns:bind="pyviews.tk.modifiers.bind"

                import:Counter="sandbox.counter.Counter"
                import:Grid='pyviews.tk.geometry.GridGeometry'

                view_model="{Counter()}">

    <Button geometry='{Grid(0, 0)}'
               bind:Button-1="{lambda e: vm.up_count()}">
        + 1
    </Button>

    <Entry geometry="{Grid(0, 1)}"
            text='{{vm.count}}'>
    </Entry>

    <Label geometry="{Grid(0, 2)}"
              bind:Button-1="{lambda e: print(e)}">
        {count}
    </Label>

    <Frame geometry='{Grid(1, 0, columnspan=3)}'>
        <!-- <RowConfig row='0' weight='1' />
        <ColConfig col='0' weight='1' /> -->
        <Frame geometry='{Grid(0, 0)}'>
            <w:For items='{range(vm.count)}'>
                <Label geometry='{Grid(index, index)}'>
                    {str(item+1) + ' ' + str(index)}
                </Label>
            </w:For>
        </Frame>
    </Frame>
</w:Container>