<?xml version="1.0"?>
<core:Container xmlns:tk="tkinter"
                xmlns:core="pyviews.view.core"
                xmlns:cs="pyviews.view.containers"
                xmlns:import="pyviews.modifiers.import_global"
                xmlns:bind="pyviews.modifiers.bind"
                xmlns:config="pyviews.modifiers.config"
                xmlns:style="pyviews.view.style"

                import:Counter="sandbox.counter.Counter"
                import:create_int_var="pyviews.binding.vars.create_int_var"
                import:get_color="sandbox.commands.get_color"
                import:Grid='pyviews.view.geomtery.GridGeometry'

                view_model="{Counter()}">

    <style:Styles path='styles' />

    <style:Style name='yellowbg'
                 config:background='blue'/>
    
    <tk:Button geometry='{Grid(0, 0)}'
               bind:Button-1="{up_count}"
               style="yellowbg">
        + 1
    </tk:Button>

    <cs:View path='count'>
    </cs:View>

    <tk:Frame geometry='{Grid(1, 0, columnspan=3)}'
              rconfig:_0="'weight': 1"
              cconfig:_0="'weight': 1">
        <tk:Frame geometry='{Grid(0, 0)}'>
            <cs:For items='{range(count)}'>
                <tk:Label geomtery='{Grid(index, index)}'
                        config:background="{get_color(index)}">
                    {str(item+1) + ' ' + str(index)}
                </tk:Label>
            </cs:For>
        </tk:Frame>
    </tk:Frame>
</core:Container>