<?xml version="1.0"?>
<w:Container xmlns="tkinter"
             xmlns:w="pyviews.tk.widgets"
             xmlns:import="pyviews.core.modifiers.import_global"
             xmlns:bind="pyviews.tk.modifiers.bind"
             
             import:Grid='pyviews.tk.geometry.GridGeometry'
             import:show_view='sandbox.commands.show_view'>
    <Button geometry='{Grid(0, 0, sticky="e")}'
               bind:Button-1="{lambda e: show_view(vm, 'messagebox')}">
        Message box
    </Button>

    <Button geometry='{Grid(0, 1, sticky="e", rows=[])}'
               bind:Button-1="{lambda e: show_view(vm, 'counter')}">
        Counter
    </Button>

    <Button geometry='{Grid(0, 2, sticky="e")}'
               bind:Button-1="{lambda e: show_view(vm, 'scroll')}">
        Scroll
    </Button>
</w:Container>