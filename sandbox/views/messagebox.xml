<?xml version="1.0"?>
<w:Container xmlns='tkinter'
        xmlns:w="pyviews.tk"
        xmlns:import='pyviews.core.modifiers.import_global'
        xmlns:bind='pyviews.tk.modifiers.bind'

        import:Pack='pyviews.tk.geometry.PackGeometry'
        import:show_message='commands.show_message'>
    <Button geometry='{Pack(fill="x")}'
            text='show message'
            bind:Button-1="{lambda e:show_message('message title', 'hohohoho')}">
    </Button>
</w:Container>