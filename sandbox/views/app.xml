<?xml version="1.0"?>
<core:App xmlns:core="pyviews.view.core"
          xmlns:config="pyviews.modifiers.config"
          xmlns:style="pyviews.view.style"
          xmlns:cs="pyviews.view.containers"
          xmlns:tk='tkinter'
          xmlns:import='pyviews.modifiers.import_global'

          import:AppViewModel='view_model.AppViewModel'
          import:Pack='pyviews.view.geometry.PackGeometry'

          config:background="white"
          state="zoomed"
          view_model='{AppViewModel()}'>
      <!-- <style:Style name='background'
                 config:background='blue'/> -->
    
    <tk:Frame geometry='{Pack(fill="x")}'>
        <cs:View path='changepage' />
    </tk:Frame>
     <cs:If true='{view}'>
        <tk:Frame geometry='{Pack(fill="both", expand=True)}'>
            <cs:View path='{view}' />
        </tk:Frame>
    </cs:If> 

</core:App>