<?xml version="1.0"?>
<cs:Scroll xmlns:tk="tkinter"
                xmlns:core="pyviews.view.core"
                xmlns:cs="pyviews.view.containers"
                xmlns:import="pyviews.modifiers.import_global"
                xmlns:bind="pyviews.modifiers.bind"

                import:Pack='pyviews.view.geometry.PackGeometry'
                import:ScrollVm="sandbox.scroll.ScrollVm"

                geometry='{Pack(fill="both", expand=True)}'
                view_model='{ScrollVm()}'
                node_id='scroll_id'>
    <cs:For items='{items}'>
        <tk:Label geometry='{Pack(fill="x")}'
                  node_id='{parent.get_node_id(index)}'
                  bind:Button-1='{lambda: parent.scroll_to(index)}'>
            asdasdf
        </tk:Label>
    </cs:For>
</cs:Scroll>