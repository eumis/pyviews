<?xml version="1.0"?>
<w:Scroll xmlns="tkinter"
          xmlns:w="pyviews.tk"
          xmlns:import="pyviews.core.modifiers.import_global"
          xmlns:bind="pyviews.tk.modifiers.bind"

          import:Pack='pyviews.tk.geometry.PackGeometry'
          import:ScrollVm="sandbox.scroll.ScrollVm"

          geometry='{Pack(fill="both", expand=True)}'
          view_model='{ScrollVm()}'>
    <w:For items='{vm.items}'>
        <Label geometry='{Pack(fill="x")}'
               bind:Button-1='once:{lambda e: item.add()}'>
            {item.text}
        </Label>
    </w:For>
</w:Scroll>