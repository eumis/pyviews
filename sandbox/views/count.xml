<?xml version="1.0"?>
<w:Container xmlns="tkinter"
                xmlns:w="pyviews.tk.widgets"
                xmlns:bind="pyviews.tk.modifiers.bind"
                
                import:Grid='pyviews.tk.geometry.GridGeometry'>
    <tk:Entry geometry="{Grid(0, 0)}"
              textvariable="{create_int_var(vm, 'count', 2)}">
    </tk:Entry>

    <tk:Label geometry="{Grid(0, 1)}">
        {count}
    </tk:Label>
</w:Container>